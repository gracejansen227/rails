<% content_for :title, "All Users" %>
<% content_for :left_column do %>
<h1>All users</h1>

<table>
  <thead>
    <tr>
      <td>First Name</td>
      <td>Last Name</td>
  <td> Favorite Language </td>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.favorite_language %></td>
    </tr>
  <% end %>
  </tbody>

</table>
<% end %>

<% content_for :right_column do %>
<h1> New User </h1>


<div class="row">
  <form action="/create" method="post" class="horizontal">

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group ">
      <div class="col-sm-10">
        First Name:
        <input class="form-control" type="text" name="first_name">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        Last Name
        <input class="form-control" type="text" name="last_name">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        Language
        <input class="form-control" type="text" name="favorite_language">
      </div>
    </div>

    <div class="form-group">
    <div class="col-sm-10">
    <input type='submit' value='Create'>
  </div>
</div>

  </form>

  <div class="col-sm-10">
  <a href="/posts">All Posts</a>
</div>

</div>
<% end %>
