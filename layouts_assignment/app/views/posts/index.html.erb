<% content_for :title, "All Posts" %>
<% content_for :left_column do %>
<h1>All Posts</h1>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Content</td>
      <td> Author </td>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.user.first_name %> <%= post.user.last_name %></td>
    </tr>
  <% end %>
  </tbody>

</table>
<% end %>
<% content_for :title, "New Post" %>
<% content_for :middle_column do %>
<h1>New Post</h1>

<form action="/posts" method="post" class="horizontal">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group ">
      <div class="col-sm-10">
    Title:
    <input type="text" name="title">
  </div>
</div>
<div class="form-group ">
  <div class="col-sm-10">
    Content
    <input type="text" name="content">
  </div>
</div>
<div class="form-group ">
  <div class="col-sm-10">
    Author
    <select name="user">
  <% @users.each do |user| %>
  <option value="<%= user.id %>"><%= user.first_name %> <%= user.last_name %></option>
  <% end %>
  </select>
</div>
</div>

<div class="form-group ">
  <div class="col-sm-10">
    <input type='submit' value='Create'>
  </div>
</div>

</form>


<% end %>


<% content_for :title, "Go to Users Page" %>
<% content_for :right_column do %>
<h1>Go to Users Page</h1>


  <a href="/users">All Users</a>
<% end %>
